
    <div class="col-xs-3">
      <%= render 'users/userslist', user: current_user %>
      <%= render 'books/bookslist', book: @book %>
    </div>


    <div class="col-xs-9">
      <table class="table">
        <h2>Users</h2>

        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg"%>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td>
              <%= link_to "Show", user_path(user.id) %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
    
