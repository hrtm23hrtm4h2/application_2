     <div>
       <h2>User-info</h2>
       <p>
         <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
       </p>
       <!--@user → user -->
       <table class="table">
        <tbody>
         <tr>
          <th>name</th>
          <th><%= user.name %></th> <!--@user.name → user.name -->
         </tr>
         <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th> <!--@user.introduction → user.introduction -->
         </tr>
        </tbody>
       </table>
       <%= link_to "", edit_user_path(user.id), class: "btn btn-default btn-block glyphicon glyphicon-wrench" %>
       <!--@user.id → user.id -->
     </div>
