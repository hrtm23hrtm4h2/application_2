<h2>User info</h2>
  <%= form_for(@user) do |f| %>

  <% if @user.errors.any? %>
    <div>
      <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<h4>Name</h4>
<%= f.text_field :name %>
<%= f.attachment_field :profile_image %>
<%= f.text_area :introduction %>
<%= f.submit "Update User" %>
<% end %>

